<Window x:Class="Cinema.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cinema"
        mc:Ignorable="d"
        Title="MainWindow" Height="430" Width="650" WindowStyle="None" Background="#FF361613">
    <StackPanel Margin="12" >
        <StackPanel.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FFD62C2C" Offset="1"/>
            </LinearGradientBrush>
        </StackPanel.Background>
        <Label Content="Login" Foreground="WhiteSmoke" FontSize="26" HorizontalAlignment="Center" FontFamily="Times New Roman"/>
        <Label Content="Username" Foreground="White" Width="413" FontFamily="Segoe UI"/>
        <TextBox Name="txtUsername" Background="Black" Foreground="White" FontSize="15" Width="400"/>
        <Label Content="Password" Foreground="White" Width="413"/>
        <PasswordBox Name="txtPassword" Background="Black" Foreground="White" FontSize="15" Width="400"/>
        <Button Name="btnSubmit" Content="Enter" Margin="60 100" Background="Black" Foreground="White" FontSize="15" Click="btnSubmit_Click" Width="265"/>
    </StackPanel>
</Window>       <!--test-->
      